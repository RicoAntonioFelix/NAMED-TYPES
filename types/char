#pragma once
#ifndef INCLUDEOS_CHAR_HPP
#define INCLUDEOS_CHAR_HPP

/**
 * This type is used to represent a named char
 *
 * @tparam T
 *   A type(tag) to instantiate a specialized named char
 */
template<typename T>
struct char_t final {
  /**
   * Constructor
   *
   * @param value
   *    The value for this type to represent
   */
  constexpr explicit char_t(const char value) noexcept
    : value_{value}
  {}

  /**
   * Operator to coerce this type to a char
   */
  constexpr operator char() const noexcept
  { return value_; }

  const char value_; //< The value this type represent
}; //< struct char_t

/**
 * This type is used to represent a named unsigned char
 *
 * @tparam T
 *   A type(tag) to instantiate a specialized named unsigned char
 */
template<typename T>
struct uchar_t final {
  /**
   * Constructor
   *
   * @param value
   *    The value for this type to represent
   */
  constexpr explicit uchar_t(const unsigned char value) noexcept
    : value_{value}
  {}

  /**
   * Operator to coerce this type to an unsigned char
   */
  constexpr operator unsigned char() const noexcept
  { return value_; }

  const unsigned char value_; //< The value this type represent
}; //< struct uchar_t

#endif //< INCLUDEOS_CHAR_HPP
